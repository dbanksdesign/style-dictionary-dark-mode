<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_brand_primary_base</item>
        <item name="colorPrimaryDark">@color/color_brand_primary_dark</item>
        <item name="colorAccent">@color/color_brand_secondary_base</item>
        <item name="colorSecondary">@color/color_brand_secondary_base</item>
        <item name="colorOnPrimary">@color/color_font_inverse</item>
        <item name="colorOnSurface">@color/color_font_primary</item>
        <item name="colorSurface">@color/color_background_primary</item>
        <item name="colorPrimarySurface">@color/color_brand_primary_base</item>
        <item name="android:colorBackground">@color/color_background_primary</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_border_radius_medium</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_border_radius_large</item>
    </style>

    <style name="DTOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/component_button_outline_background_color</item>
        <item name="strokeColor">@color/component_button_outline_border_color</item>
        <item name="strokeWidth">@dimen/component_button_outline_border_width</item>
        <item name="android:padding">@dimen/component_button_padding</item>
        <item name="android:textSize">@dimen/component_button_font_size</item>
        <item name="android:textColor">@color/component_button_outline_color</item>
        <item name="cornerRadius">@dimen/component_button_border_radius</item>
    </style>

    <style name="DTPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/component_button_primary_background_color</item>
        <item name="android:textColor">@color/component_button_primary_color</item>
        <item name="android:padding">@dimen/component_button_padding</item>
        <item name="android:textSize">@dimen/component_button_font_size</item>
        <item name="cornerRadius">@dimen/component_button_border_radius</item>
    </style>

    <style name="DTBadge" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/component_badge_color</item>
        <item name="chipBackgroundColor">@color/component_badge_background_color</item>
    </style>

    <style name="DTBadge.Danger">
        <item name="android:textColor">@color/component_badge_variant_danger_color</item>
        <item name="chipBackgroundColor">@color/component_badge_variant_danger_background_color</item>
    </style>

    <style name="DTBadge.Warning">
        <item name="android:textColor">@color/component_badge_variant_warning_color</item>
        <item name="chipBackgroundColor">@color/component_badge_variant_warning_background_color</item>
    </style>

    <style name="DTBadge.Success">
        <item name="android:textColor">@color/component_badge_variant_success_color</item>
        <item name="chipBackgroundColor">@color/component_badge_variant_success_background_color</item>
    </style>
</resources>