<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ComponentsFragment">

    <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/button_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_small"
        android:layout_marginLeft="@dimen/size_padding_small"
        android:layout_marginRight="@dimen/size_padding_small"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_padding_medium"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Buttons"/>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/badge_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_padding_small"
        android:layout_marginLeft="@dimen/size_padding_small"
        android:layout_marginRight="@dimen/size_padding_small"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_padding_medium"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Badges"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>