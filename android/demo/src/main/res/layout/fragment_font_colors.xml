                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_font_xl"
                android:text="@string/font_color_example"
                android:layout_gravity="center"
                android:padding="@dimen/size_padding_medium"
                android:textColor="@color/color_font_primary" />
            <TextView
                android:id="@+id/font_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/size_font_medium"
                android:textColor="@color/color_font_primary"
                android:text="Primary"/>
        </LinearLayout>

        <LinearLayout
